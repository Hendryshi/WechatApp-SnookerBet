.top-bg {
  height: 360rpx;
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 1;
}

.top-title {
  color: white;
  margin-top: 100rpx;
  width: 100%;
  font-size: large;
  text-align: center;
  position: fixed;
  z-index: 2;
}

.header{
  position: fixed;
  z-index: 2;
  height: 80rpx;
  margin-top: 300rpx;
  width: 100%;
  background: rgb(230, 230, 230);
  border-top-left-radius: 55rpx;
  border-top-right-radius: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.updateDate{
  font-size: 30rpx;
}

.main-bg {
  padding-top: 320rpx;
  padding-bottom: 200rpx;
}

.loading{
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
