.top-bg {
  height: 360rpx;
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 1;
  border-bottom-left-radius: 80rpx;
  border-bottom-right-radius: 80rpx;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
}

.progress {
  position: fixed;
  z-index: 2;
  width: 700rpx;
  margin-left: 25rpx;
  height: 80rpx;
  margin-top: 310rpx;
}

.main-bg {
  padding-top: 360rpx;
  padding-bottom: 200rpx;
}

.scorebox {
  display: flex;
  line-height: 80rpx;
  font-size: 60rpx;
  font-weight: bold;
  justify-content: space-around;
}

.bottom{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    /*footer*/
    z-index: 10;
    height: 100rpx;
    bottom: 0;
    position: fixed;
    width: 100%;
    background-color: #f6f6f6;
}

.card {
  background: white;
  height: 200rpx;
  align-items: center;
  line-height: 40rpx;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  transition: 0.3s;
  border-radius: 30rpx;
  margin: 20rpx; 
  display: flex;
  justify-content: space-between;
}

.matchBox{
  height: 90%;
  width: 70%;
  display: flex;
  flex-direction: column;
}

.statusBox{
  height: 90%;
  width: 30%;
}

.playerBox{
  height: 50%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.player{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-left: 20rpx;
}

.player image {
  border-radius: 50%;
  width: 65rpx;
}

.rankTag{
  margin-right: 5px;
}

.name{
  margin-left: 20rpx;
}

.score {
  width: 75rpx;
  height: 60%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 30rpx;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
}

.statusBox{
  height: 90%;
  width: 25%;
  display: flex;
  flex-direction: column;
  border-left: 1px ridge;
}

.status{
  height: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.desactive{
  background-color: #ccc;
  pointer-events: none;
}