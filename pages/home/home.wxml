<view class="headBg">
	<view class="title">
		<!-- 标题轮播图等 -->
		<swiper
		 indicator-dots='true'
		 autoplay='true'
		 interval='3000'
		 duration='1000'
		 circular='true'
		 class="swip"
		>
			<block wx:for="{{movies}}" wx:for-index="index">
				<swiper-item>
					<image src='{{item.url}}' mode='widthFix' />
				</swiper-item>
			</block>
		</swiper>
	</view>
</view>

<view class="matchbox" bindtap="tapMatch">
	<image src="../../images/worldSnooker.jpg" style="width:25%" mode="widthFix" />
	<view style="width:45%" class="matchInfo">
		<view style="font-size: 30rpx; font-weight:bold">斯诺克单局限时赛</view>
		<view style="font-size: 30rpx">2022/01/25 - 01/30</view>
	</view>
	<van-button round type="primary" size="small" bindclick="clickPredict">去竞猜</van-button>
</view>

<view class="matchbox">
	<image src="../../images/worldSnooker.jpg" style="width:25%" mode="widthFix" />
	<view style="width:45%" class="matchInfo">
		<view style="font-size: 30rpx; font-weight:bold">斯诺克德国大师赛</view>
		<view style="font-size: 30rpx">2022/01/25 - 01/30</view>
	</view>
	<van-button round type="primary" size="small">去竞猜</van-button>
</view>

