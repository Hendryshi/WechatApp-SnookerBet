.top-bg {
  height: 120px;
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 1;
}

.top-title {
  color: white;
  margin-top: 100rpx;
  width: 100%;
  font-size: large;
  text-align: center;
  position: fixed;
  z-index: 2;
}

.main-bg {
  padding-top: 120px;
}

.header {
  background: rgb(230, 230, 230);
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 30rpx;
  font-size: 26rpx;
  align-items: center;
  position: sticky;
  top: 120px;
}

.card {
  background: white;
  height: 250rpx;
  align-items: center;
  line-height: 40rpx;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  transition: 0.3s;
  border-radius: 10rpx;
  margin: 20rpx;
  display: flex;
  justify-content: center;
}

.card:hover {
  box-shadow: 0 16rpx 32rpx 0 rgba(0, 0, 0, 0.2);
}

.playerPart {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.playerPart image {
  border-radius: 50%;
  width: 120rpx;
  margin-top: 30rpx;
}

.rankTag{
  margin-top: -30rpx;
}

.player1{
  margin-top: 20rpx;
  padding-left: 10rpx;
}

.player2{
  margin-top: 20rpx;
  padding-right: 10rpx;
}

.matchPart{
  display: flex;
  flex-direction: column;
  justify-content: center;
  line-height: 60rpx;
}

.matchScore {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  
}

.matchDate{
  text-align: center;
  line-height: 40rpx;
}

.score {
  text-align: center;
  line-height: 80rpx;
  font-size: 60rpx;
  width: 50%;
  font-family: fantasy;
}

.matchStatus{
  display: flex;
  justify-content: center;
  /* margin-top: 10px; */
}